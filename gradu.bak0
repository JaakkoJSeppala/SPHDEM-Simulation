\section{Python Scripts}

\section{Data Pre-Processing}

\begin{lstlisting}[caption={Reading SPH--DEM simulation output and converting to uniform time series.}]
import numpy as np
import pandas as pd

# Read raw SPH--DEM output
data = np.loadtxt("sphdem_output.csv", delimiter=",")
t_raw, vel_raw = data[:,0], data[:,1]

# Interpolate to uniform timestep ($\Delta$t = 0.001 s)
t_uniform = np.arange(t_raw[0], t_raw[-1], 1e-3)
vel_uniform = np.interp(t_uniform, t_raw, vel_raw)

# Save processed data
np.savetxt("velocity_uniform.txt", np.column_stack([t_uniform, vel_uniform]),
           fmt="%.6f", header="time [s], velocity [m/s]")
\end{lstlisting}


\section{Frequency and Damping Analysis}

\begin{lstlisting}[caption={Computation of dominant sloshing frequency and logarithmic decrement.}]
import numpy as np
from scipy.signal import find_peaks

# Load preprocessed velocity data
t, v = np.loadtxt("velocity_uniform.txt", unpack=True)

# Identify local maxima
peaks, _ = find_peaks(v, height=0)
A = v[peaks]
periods = np.diff(t[peaks])
f = 1.0 / np.mean(periods)

# Logarithmic decrement
delta = np.mean(np.log(A[:-1] / A[1:]))

print(f"Dominant frequency: {f:.2f} Hz")
print(f"Logarithmic decrement: {delta:.3f}")
\end{lstlisting}


\section{Visualization and Energy Dissipation}

